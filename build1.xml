<project name="Lab4" default="build">
    <path id="classpath.test">
        <pathelement location="${junit.lib}" />
        <pathelement location="${hamcrest-core}" />
    </path>
    <target name="compile">
        <mkdir dir="build/classes"/>
        <mkdir dir="build/tests"/>
        <javac destdir="build/classes" includeantruntime="false">
            <src path="src"/>
            <classpath>
                <pathelement location="build/classes"/>
                <path refid="classpath.test"/>
            </classpath>
        </javac>
        <javac destdir="build/tests" includeantruntime="false">
            <src path="test"/>
            <classpath>
                <pathelement location="build/classes"/>
                <path refid="classpath.test"/>
            </classpath>
        </javac>
    </target>
    <target name="build" depends="compile">
        <java classname="Main" classpath="build/classes"/>
        <jar destfile="Lab4.jar" basedir="build/classes" compress="false" index="true">
            <manifest>
                <attribute name="Main-Class" value="Main"/>
            </manifest>
        </jar>
    </target>
    <target name="clean">
        <delete dir="build"/>
    </target>
    <target name="music" depends="build" description="Play music when build">
        <sound>
            <success source="test.wav"/>
            <fail source="test.wav"/>
        </sound>
    </target>



    <target name="test" depends="build">
        <junit fork="true" printsummary="on" >
            <classpath>
                <path refid="classpath.test" />
                <pathelement location="build/classes"/>
                 <pathelement location="build/classes"/>
            </classpath>
            <batchtest>
                <fileset dir="test" includes="*Test*.java" />
            </batchtest>
        </junit>
    </target>


    
</project>